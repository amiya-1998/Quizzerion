<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Quizzotrope</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css" />
  <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body id="articlesBody">
  <nav class="navbar navbar-expand-md navbar-light fixed-top bg-white">
    <a class="navbar-brand" href="/"><img src="/stylesheets/img/Artboard 7.png" class="logoImage"></a>
    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse" id="navbarCollapse" style="">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item mr-2">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item active mr-2">
          <a class="nav-link a" href="/articles">Quizzes</a>
        </li>
        <li class="nav-item mr-2">
          <a class="nav-link" href="/about">About us</a>
        </li>
      </ul>
      <form action="/articles" class="form mt-2 mt-md-0 ml-sm-1 ml-md-3 mr-3" method="get">
        <div class="ui transparent input" id="search">
          <input type="text" name="query" placeholder="Search" autocomplete="off">
        </div>
        <button type="submit" class="btn"><i class="search link icon"></i></button>
      </form>
    </div>
  </nav>

  <!-- Search Bar -->
  <section id="articlesSearch" class="py-3">
    <div class="container">
      <div class="row">
        <div class="col mx-auto">
          <div class="card p-4">
            <div class="card-body">
              <h3 class="text-center text-uppercase">Search For Quizzes by Title or by Location</h3>
              <hr>
              <form action="/articles" method="GET" class="ui form">
                <div class="ui fluid action input">
                  <input type="text" name="query" placeholder="Search...">
                  <button class="ui primary button">Search</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Articles Section -->

  <section id="articles" class="py-3 mt-2">
    <div class="container">
      <div class="row">
        <% if(articles.length === 0) { %>
          <div class="col">
            <div class="jumbotron text-center">
              <h1>No Such Articles found</h1>
            </div>
          </div>
          <% } else { %>
            <% for(let i = 0; i < articles.length; i++) { var date = new Date(articles[i].updated_at).toDateString()%>
              <div class="col-md-4 mb-3">
                <div class="card">
                  <img src="<%= articles[i].image %>" alt="Card image" class="card-img-top img-fluid questionImage" max-width="40px" max-height="40px">

                  <div class="card-body">
                    <h3 class="card-title"><%= articles[i].title %></h3>
                    <ul class="list-group list-group-flush mb-3">
                      <li class="list-group-item">
                        <p class="mb-0">Contest Date:
                          <%= date %>
                        </p>
                      </li>
                      <li class="list-group-item">
                        <p class="mb-0">Location:
                          <%= articles[i].location %>
                        </p>
                      </li>
                    </ul>
                    <a href="/articles/<%= articles[i].id %>" class="btn btn-outline-primary">Read More</a>
                    <a href="<%= articles[i].link %>" class="btn btn-outline-success ml-auto">Contest Link</a>
                  </div>
                </div>
              </div>
            <% } %>
          <% } %>
      </div>
    </div>
  </section>


  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
